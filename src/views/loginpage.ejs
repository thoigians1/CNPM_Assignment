<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Login</title>
    <style>
        .background_container {
            background-color: #1178B3;
        }

        a {
            cursor: pointer;
        }

        .text-color {
            color: #ffffff;
        }

        .header_register {
            font-weight: 300;
            padding-top: 3rem;
            padding-bottom: 1rem;
        }
    </style>
</head>

<body>
    <header class="section-header">
        <div class="background_container">

            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-8 col-sm-6 col-4 mt-2 mb-2">
                        <img src="https://cdn3.f-cdn.com/contestentries/1484825/33424121/5ca0940377bf4_thumb900.jpg"
                            alt="logo" width="100" height="50">
                    </div>
                    <div class="col-lg-4 col-sm-6 col-8">
                        <div class=" float-md-right row">
                            <div class="">
                                <a class="text-color col-2" href="/login">
                                    <span> Đăng nhập </span>
                                </a>
                                |
                                <a class="text-color col-8" href="/register">
                                    <span> Đăng ký </span>
                                </a>
                            </div>

                        </div>
                    </div>

                </div>
            </div>

        </div>
    </header>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="mb-3 text-center">
                    <h3>Đăng nhập</h3>
                </div>
                <form action="/auth" class="shadow p-4" method="POST" id="login-form">
                    <div class="mb-3">
                        <input type="text" name="email" id="email" class="form-control" placeholder="Email" required>
                    </div>

                    <div class="mb-3">
                        <input type="password" name="password" id="password" class="form-control" placeholder="Mật khẩu"
                            required>
                    </div>

                    <a class="float-end text-decoration-none">Quên mật khẩu?</a>

                    <div class="mb-3">
                        <button type="submit" name="login" class="btn btn-primary" id="submit-btn">Đăng nhập</button>
                    </div>

                    <hr>

                    <p class="text-center mb-0">Bạn chưa có tài khoản? <a href="/register"
                            class="text-decoration-none">Đăng ký ngay</a></p>

                </form>
            </div>
        </div>
    </div>
    <span>
        <%- include('footer.ejs') %>
    </span>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>
    <!-- Link thư viện jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script>
        $loginForm = $('#login-form');
        $submitBtn = $('#submit-btn');
        $submitBtn.on('click', (event) => {
            event.preventDefault();
            $.ajax({
                url: "/auth/signin",
                type: 'POST',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({
                    email: $('#email').val(),
                    password: $('#password').val()
                }),
                success: (data) => {
                    console.log('success', data);
                    $loginForm.submit();
                },
                error: function (jqXHR, error, errorThrown) {
                    console.log(error);
                },
            })
        })
    </script>
</body>

</html>