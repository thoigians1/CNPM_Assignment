<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>edit user's information</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <form action="/auth/edit-food/put-food" method="POST">
                <div class="form-row">
                    <div class="col-12 mt-3"> <b>Cập nhật món ăn:</b> </div>
                </div>
                <div class="form-group">
                    <label for="inputName">Tên món</label>
                    <input type="text" class="form-control" name="name" value="<%= food.name %>" required
                        data-bv-notempty-message="Food name is required">
                </div>
                <div class="form-group">
                    <label for="inputKmage">Link ảnh</label>
                    <input type="text" class="form-control" name="image" value="<%= food.image %>"
                        data-bv-notempty-message="Image link is required">
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputCost">Giá tiền</label>
                        <input type="text" class="form-control" name="cost" value="<%= food.cost %>" required
                            data-bv-notempty-message="The cost is required">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputType">Loại đồ ăn</label>
                        <select name="type" class="form-control">
                            <% for (let i=0; i < foodtypes.length; i++ ) { %>
                                <option value="<%= foodtypes[i].id %>" <% if(foodtypes[i].id==food.foodtypeId) {%>
                                    selected <%}%>>
                                        <%= foodtypes[i].name %>
                                </option>
                                <% } %>
                        </select>
                    </div>
                    <input type="text" name="id" value="<%= food.id %>" hidden>
                    <input type="text" name="email" value="<%= email %>" hidden>
                    <input type="text" name="password" value="<%= password%>" hidden>
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
            </form>
        </div>
    </div>
</body>

</html>