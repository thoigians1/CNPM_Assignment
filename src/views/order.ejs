<html lang="en">

<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        .background_container {
            background-color: #1178B3;
        }

        a {
            cursor: pointer;
        }

        h6 {
            font-size: 18px;
        }

        .text-color {
            color: #ffffff;
        }

        table {
            margin-left: auto;
            margin-right: auto;
            border-collapse: collapse;
            width: 90%;
        }

        th,
        td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #DDD;
        }

        tr:hover {
            background-color: #D6EEEE;
        }
    </style>
</head>

<body>

    <header class="section-header mb-3">
        <div class="background_container">

            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-8 col-sm-6 col-4 mt-2 mb-2">
                        <form action="/auth" method="POST" class="m-0">
                            <input type="text" name="email" value="<%= email %>" hidden>
                            <input type="text" name="password" value="<%= password %>" hidden>
                            <button name="button" type="submit" class="btn">
                                <img src="https://cdn3.f-cdn.com/contestentries/1484825/33424121/5ca0940377bf4_thumb900.jpg"
                                    alt="logo" width="100" height="50">
                            </button>
                        </form>
                    </div>

                    <div class="col-lg-4 col-sm-6 col-8">
                        <div class=" float-md-right row">
                            <div class="">
                                <a class="text-color col-2">
                                    <span> Hi admin </span>
                                </a>
                                |
                                <a class="text-color col-8" href="/">
                                    <span> Đăng xuất </span>
                                </a>
                            </div>

                        </div>
                    </div>

                </div>
            </div>

        </div>
    </header>

    <div class="content container mt-5">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>OrderId</th>
                    <th>Order payment</th>
                    <th>Order foods</th>
                    <th>Order customer name</th>
                    <th>Order total</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < orders.length; i++) { %>
                    <tr>
                        <td>
                            <%= orders[i].id %>
                        </td>
                        <td>
                            <%= orders[i].paymentId %>
                        </td>
                        <td>
                            <ul>
                                <% for(let j=0; j < orders[i].Contents.length; j++) { %>
                                    <li>
                                        <%= orders[i].Contents[j].foodName%>: <%= orders[i].Contents[j].quantity%>
                                    </li>
                                    <% } %>
                            </ul>
                        </td>
                        <td>
                            <%= orders[i].userOrder.lastName %>
                                <%= orders[i].userOrder.firstName %>
                        </td>
                        <td>
                            <%= orders[i].total %>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
</body>

</html>