                    <% for (let i=0; i < foodtypes.length; i++ ) { %>
                        <div id="<%= foodtypes[i].id %>" class="row m-3">
                            <h3 class="col-12 mb-4">
                                <%= foodtypes[i].name %>
                            </h3>

                            <% for (let j=0; j < foodtypes[i].Foods.length; j++ ) { %>
                                <div class="col-md-3 mb-3 container no-gutters">
                                    <div class="food-item">
